#!groovy
pipeline {
    agent any
    environment {
        BRANCH_NAME=env.GIT_BRANCH.replace("origin/", "")
    }
    stages {
        stage('Build and Publish Pacts') {
            agent {
                docker {
                    image "maven:3.6-jdk-11-openj9"
                    reuseNode true
                    alwaysPull false
                    args "-u root"
                }
            }
            steps {
                script {
                    sh 'docker run mvn clean verify pact:publish -Dpact.consumer.version=${GIT_COMMIT} -Dpact.tag=CONTRACT-TEST'
                }
            }
        }
    }

    post {
        success {
            script {
                echo "Contract Generated Successful, now trigger Provider check!"
                build job: '2-PACT-FLOW-PROVIDER-TEST-CONTRACT-client-api', propagate: true
            }
        }
    }
}